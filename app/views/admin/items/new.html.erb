<div class="container">
  <div class="row">
    <div class="col-3 my-5 bg-brown">
      <h3>商品新規登録</h3>
    </div>
    <%= render 'error' %>
  </div>
  <div class="row">
    <div class="mx-auto">
     <%= form_with model: @item, url: admin_items_path do |f| %>
      <%= render 'form', f: f, genres: @genres %>
     <div class="form-group text-center">
      <%= f.submit "新規登録", class:"btn btn-success" %>
     </div>
     <% end %>
    </div>
  </div>
</div>