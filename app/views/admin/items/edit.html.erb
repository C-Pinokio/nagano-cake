<div class="container">
  <div class="row">
    <div class="col-10 mt-3">
      <h4 class="d-inline-block bg-light">商品編集</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mt-3 mx-auto">
      <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
       <%= render 'form', f: f, genres: @genres %>
       <div class="fo-m-group text-center">
         <%= f.submit "変更を保存", class:"btn btn-success btn-lg" %>
       </div>
      <% end %>
    </div>
  </div>
</div>