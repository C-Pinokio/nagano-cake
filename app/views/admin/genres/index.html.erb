<div class="container">
  <div class="row">
    <div class="col-10 mt-4">
      <h4 class="d-inline-block bg-light">ジャンル一覧・追加</h4>
    </div>
    <%= render 'error' %>
  </div>
  <%= render 'flash' %>
  <div class="row mt-4">
    <div class="col-2">
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <%= f.label :name, "ジャンル名", style: "margin-right:75px;" %>
    </div>
    <div class="col-3">
      <%= f.text_field :name, placeholder:"ジャンル名" %>
    </div>
    <div class="col-3">
      <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-5 mt-5">
      <table class="table">
        <thead class="bg-light">
          <th>ジャンル</th>
          <th></th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="text-center">
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>