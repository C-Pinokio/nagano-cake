<div class="container">
  <div class="row">
    <div class="col-3 my-5 bg-brown">
      <h3>ジャンル編集</h3>
    </div>
    <%= render 'error' %>
  </div>
  <div class="row">
    <div class="col-2">
    <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
      <%= f.label :name, "ジャンル名", style: "margin-right:75px;" %>
    </div>
    <div class="col-3">
      <%= f.text_field :name, placeholder:"ジャンル名" %>
    </div>
    <div class="col-3">
      <%= f.submit "変更を保存", class:"btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>