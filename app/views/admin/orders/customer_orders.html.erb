<div class="container">
  <div class="row">
    <h2 class="d-inline-block bg-brown my-5"><%= @order.customer.full_name %>さんの注文履歴</h2>
    <table class="table mt-3">
      <thead class="bg-brown">
        <tr>
          <th>購入日時</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order.id), class:"link-order-time" do %>
              <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
            <% end %>
          </td>
          <td><%= order.order_details.sum(:amount)%></td>
          <td><%= order.status_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>