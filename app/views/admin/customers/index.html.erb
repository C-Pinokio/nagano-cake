<div class="container">
  <div class="row">
    <div class="col-2 my-5 bg-brown">
      <h3> 会員一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-9">
      <table class="table">
        <thead>
          <tr class="bg-brown">
            <th style="width: 10%">会員ID</th>
            <th style="width: 30%">氏名</th>
            <th style="width: 40%">メールアドレス</th>
            <th style="width: 20%">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
           <td><%= customer.id %></td>
           <td><%= link_to customer.full_name, admin_customer_path(customer.id), class:"link-order-customer" %></td>
           <td><%= customer.email %></td>
           <td>
             <% if customer.is_deleted == false %>
              <p class="text-success">有効</p>
             <% else %>
              <p class="text-secondary">退会</p>
             <% end %>
           </td>
          </tr>
         <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center mt-3 custom-pagination">
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>