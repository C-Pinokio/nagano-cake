<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render 'genre' %>
    </div>
    <div class="col-4">
      <%= image_tag @item.get_item_image(400,550) %>
    </div>
    <div class="col-6 text-center">
        <h2 class="my-5"><%= @item.name %></h2>
        
        <%= @item.introduction %></br>
      
        
        <% if @item.is_active == true %><%# 商品が販売している場合 %>
          <p class="m-3">¥<%= @item.add_tax_price.to_s(:delimited) %>（税込）</p>
          <%= render 'item', item: @item, cart_item: @cart_item %>
        <% else %><%# 商品が販売を停止している場合%>
          <p>販売停止中</p>
        <% end %>
    </div>
  </div>
</div>