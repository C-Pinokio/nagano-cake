<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.get_item_image(400,550) %>
    </div>
        
    <div class="col-md-8 text-center">
        <h2 class="my-5"><%= @item.name %></h2>
        
        <%= @item.introduction %></br>
        
        <p class="my-3">¥<%= @item.without_tax %>（税込）</p>
        
        <%= render 'item', item: @item %>
    </div>
  </div>
</div>