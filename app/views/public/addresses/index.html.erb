<div class="col-md-6 offset-md-1">
  <div>
    <!--< flash[:notice] %>-->
  </div>
  <h4 class="my-3 ml-4">配送先/登録一覧</h4>
  
  <!--エラー文-->
  <% if @address.errors.any? %>
  <%= @address.errors.count %>件のエラーが発生しました
  <ul>
    <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  
  <!--配送先フォーム-->
  <%= render "form", address: @address %>
  <!--配送先の編集/削除テーブル-->
  <table class="table">
    <thead>
        <tr class="bg-light">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td>address.postcode</td>
          <td>address.address</td>
          <td>address.name</td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id, class: "btn btnoutline-cecondary") %>
            <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btnoutline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>