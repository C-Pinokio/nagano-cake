<%= form_with model: address do |f| %>
  <div class="form-group">
    <label for="customer_postcode">郵便番号（ハイフンなし）</label>
    <%= f.text_field :postcode, class: "form-control customer_postcode" %>
  </div>
  <div class="form-group">
    <label for="customer_address">住所</label>
    <%= f.text_field :address, class: "form-control customer_address" %>
  </div>
  <div class="form-group">
    <label for="customer_name">宛名</label>
    <%= f.text_field :name, class: "form-control customer_name" %>
  </div>
  