<div class="container">
  <div class="row justify-content-start">
    <div class="col-9">
      <h2 class="bg-brown my-5 col-4">新規会員登録</h2>
      
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
      
      <table class="table table-borderless">
        <tr>
          <td><%= f.label :name, "名前" %></td>
          <td>（姓）　<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
          <td>（名）　<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
        </tr>
        <tr>
          <td><%= f.label :kana, "フリガナ" %></td>
          <td>（セイ）<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
          <td>（メイ）<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
        </tr>
        
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td>　　　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        
        <tr>
          <td><%= f.label :postcode, "郵便番号（ハイフンなし）" %></td>
          <td>　　　　<%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %></td>
        </tr>
        
        <tr>
          <td><%= f.label :address, "住所" %></td>
          <td>　　　　<%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
        </tr>
        
        <tr>
          <td><%= f.label :phone_number, "電話番号（ハイフンなし）" %></td>
          <td>　　　　<%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
        </tr>
        <tr>
          <td> <%= f.label :password, "パスワード（6文字以上）" %>
            <% if @minimum_password_length %>
            <% end %></td>
          <td>　　　　<%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        
        <tr>
          <td><%= f.label :password_confirmation, "パスワード（確認用）" %></td>
          <td>　　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        
        <tr>
          <td></td>
          <td>
            <div class="actions">
              　　　　<%= f.submit "新規登録",class: 'btn btn-success' %>
            </div>            
          </td>
        </tr>
      </table>
      <% end %>   
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>

